def gv

pipeline {
    agent any
    
    tools {
  maven 'maven3'
    }
    stages {
        stage('init') {
            steps{
                script {
                    gv = load "script.groovy"
                }
            }

        }
        stage('build') {
            steps{
                script {
                    gv.build()
                }
            } 
        }



        stage('SonarQube') {
            steps {
                script {
                    gv.sonar()
                }
            }
        }

        stage('upload war file to nexus') {
            steps {
                script {
                def mavenPom = readMavenPom file:'pom.xml'
                    gv.uploadwarfiletonexus()
                }
            }
        }

        
        
    }
}
